@import "/wxParse/wxParse.wxss";

.details_k{padding: 40rpx 24rpx 36rpx}
.bt{font-size: 36rpx;color: #323232;line-height: 48rpx;}
.bt_f{font-size: 22rpx;line-height: 42rpx;color: #686868;}
/* 详情 */
.details{font-size: 24rpx;line-height: 44rpx;color: #060606;padding: 8rpx 0 50rpx;}
.details image{max-width: 100%}
/* 点赞 */
.like{font-size: 30rpx;color: #d3ad60;line-height: 70rpx;border: 1px solid #c5c5c5;width: 300rpx;border-radius: 80rpx;margin: 0 auto 40rpx;padding-left: 152rpx;background: url(https://wew.jydianping.com/images/like1.jpg) no-repeat 100rpx 10rpx;background-size: 40rpx 42rpx;}
/* 分享那排 */
.fx_k .fl{height: 54rpx;border: 1rpx solid #f3f3f3;border-radius: 100rpx;font-size: 24rpx;line-height: 54rpx;color: #7c7c7c;padding: 0 24rpx 0 54rpx;margin-right: 20rpx;overflow: hidden}
.fx_k .a1{background:url(https://wew.jydianping.com/images/index_ul2.png) no-repeat 22rpx 17rpx;background-size: 29rpx 18rpx;}
.share{background: url(https://wew.jydianping.com/images/index_ul3.png) no-repeat 24rpx 17rpx;background-size: 20rpx 20rpx;}
/* 灰色间隔 */
.hui{height: 60rpx;background: #f5f5f5}
/* 用户评论 */
.comment_bt{font-size: 30rpx;line-height: 92rpx;border-bottom: 1rpx solid #eeeeee;}
.comment_k{position: relative;padding-left: 100rpx;padding: 30rpx 0 22rpx 100rpx;border-bottom: 1rpx solid #f3f3f3;}
.comment_k image{position: absolute;width: 84rpx;height: 84rpx;top: 30rpx;left: 0;border-radius: 50%;}
.comment_k  .names{font-size: 24rpx;line-height: 44rpx;color: #8d8d8d;}
.comment_k  .time{font-size: 22rpx;line-height: 44rpx;color: #a6a6a6;}
.comment_k  .content{font-size: 26rpx;line-height: 56rpx;color: #5b5b5b;}
/* 返回顶部 */
page{width: 100%;height: 100%;}
scroll-view{height: 100%;width: 100%;}
.ding{width: 40px;height: 40px;position: fixed;right: 10rpx;bottom: 10rpx;z-index: 1;color: red;text-align: center;line-height: 50px;background: #ccc url(https://wew.jydianping.com/images/ding.png) no-repeat center;background-size: 50% 50%;}
/* 没有更多评论 */
.no_comment{text-align: center;font-size: 28rpx;color: #7c7c7c;line-height: 80rpx;background: #f5f5f5}
/* 发表评论 */
.publish_k{height: 120rpx;}
.publish{padding: 30rpx 24rpx;position: fixed;width: 100%;bottom: 0;left: 0;background: #fff;border-top: 1rpx solid #f5f5f5;}
.publish .fl{height: 58rpx;line-height: 58rpx;width: 508rpx;border: 1rpx solid #e1e1e1;border-radius: 8rpx;font-size: 24rpx;color: #c0c0c0;box-sizing:border-box;padding-left: 22rpx;}
.publish .fr{width: 160rpx;height: 60rpx;background: #d3ad60;color: #fff;font-size: 30rpx;line-height: 60rpx;border-radius: 8rpx;border: 0}




