@import "/wxParse/wxParse.wxss";
.banner{height: 324rpx;position: relative}
.banner image{display: block;width: 100%;height: 324rpx;}
.banner .bt{position: absolute;bottom: 0;left: 0;width: 100%;background: rgba(0, 0, 0, 0.6);height: 114rpx;padding: 7rpx 24rpx}
.banner .bt .a1{font-size: 30rpx;color: #d3ad60;line-height: 50rpx;}
.banner .bt .a2{font-size: 24rpx;color: #8f7746;line-height: 50rpx;}
/* 报名截止 */
.stop{padding: 30rpx 0;border-bottom: 1rpx solid #e1e1e1;background: url(https://wew.jydianping.com/images/bm_stop.jpg) no-repeat center;background-size: 2rpx 120rpx;}
.stop .div{width: 50%;float: left;line-height: 44rpx;font-size: 24rpx;text-align: center}
.stop .a2{font-size: 30rpx;}
/* 地址 */
.map{padding: 36rpx 24rpx 36rpx 60rpx;background: url(https://wew.jydianping.com/images/map.png) no-repeat 27rpx 40rpx;background-size: 18rpx 22rpx;font-size: 24rpx;line-height: 30rpx;color: #999999;text-align: left;}
.map::after {border: 0;} 
/* 灰色隔断 */
.hui{height: 20rpx;background: #eaeaea}
.bt{padding: 0 24rpx;border-bottom: 1rpx solid #e1e1e1;font-size: 30rpx;line-height: 88rpx;color: #323232}
/* 活动介绍 */
.introduce{font-size: 24rpx;line-height: 44rpx;color: #060606;padding: 8rpx 24rpx;}
.introduce image{max-width: 100%}
/* 用户评论 */
.comment_bt{font-size: 30rpx;line-height: 92rpx;border-bottom: 1rpx solid #eeeeee;}
.comment_k{position: relative;padding-left: 100rpx;padding: 30rpx 0 22rpx 100rpx;border-bottom: 1rpx solid #f3f3f3;}
.comment_k image{position: absolute;width: 84rpx;height: 84rpx;top: 30rpx;left: 0;border-radius: 50%;}
.comment_k  .names{font-size: 24rpx;line-height: 44rpx;color: #8d8d8d;}
.comment_k  .time{font-size: 22rpx;line-height: 44rpx;color: #a6a6a6;}
.comment_k  .content{font-size: 26rpx;line-height: 56rpx;color: #5b5b5b;}
/* 返回顶部 */
page{width: 100%;height: 100%;}
scroll-view{height: 100%;width: 100%;}
.ding{width: 40px;height: 40px;position: fixed;right: 10rpx;bottom: 10rpx;z-index: 1;color: red;text-align: center;line-height: 50px;background: #ccc url(https://wew.jydianping.com/images/ding.png) no-repeat center;background-size: 50% 50%;}
/* 没有更多评论 */
.no_comment{text-align: center;font-size: 28rpx;color: #7c7c7c;line-height: 80rpx;background: #f5f5f5}
/* 底部报名 */
.foot_bm_k{height: 98rpx;}
.foot_bm{position: fixed;bottom: 0;left: 0;width: 100%;}
.foot_bm navigator{width: 50%;float: left;height: 98rpx;font-size: 30rpx;line-height: 98rpx;text-align: center;text-align: center}
.foot_bm .a1{background: #d3ad60;color: #fff;}
.foot_bm .a2{background: #fff;color: #d3ad60;border-top: 1rpx solid #eaeaea;height: 97rpx;line-height: 97rpx;}








